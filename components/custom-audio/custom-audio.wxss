.myAudio{
  text-align:center;
  width:650rpx;
  height:150rpx;
  display:flex;
  border:1px solid #eaeaea;
  justify-content:center;
  align-items:center;
  margin:20rpx auto;
  background:#fff;
}
.audioPlay {
  width:140rpx;
  height:150rpx;
  display:flex;
  justify-content:center;
  align-items:center;
}
.audioContent {
  flex:1;
  max-width:510rpx;
  font-size:26rpx;
  text-align:left;
  box-sizing:border-box;
  padding-right:24rpx;
  padding-left:10rpx;
  background:#fff;
}
.myAudioMy .audioTitle {
  padding-right:20rpx;
  box-sizing:border-box;
  padding-left:12rpx;
  height:45rpx;
}


.progressBar{
  width: 100%;
  margin: 12rpx auto;
}
.progressBar-line{
  width: 100%;
  background: #ddd;
  height:8rpx;
  position: relative;
  border-top:4rpx solid #fff;
  border-bottom:4rpx solid #fff;
}
.progress-Dot{
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  border:2px solid #ddd;
  border-radius: 50%;
  top: 50%;
  left: 0;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  pointer-events: none;
}
.progressted{
  background: #f80000;
  position: absolute;
  width: 10%;
  height: 100%;
  top: 0;
  left: 0;
}

.myAudio .slider{
  width:100%;
  height:5rpx;
  background:#eaeaea;
  margin:0rpx auto;
  padding:12rpx 0;
  position: relative;
}
.circleSlide{
  width:20rpx;
  height:20rpx;
  background:#fff;
  border:1px solid #ddd;
  border-radius: 50%;
  position: absolute;
  top:50%;
  left:0;
  text-shadow: 5rpx 0 0 #ddd;
  transform: translateY(-50%);
}





.slider slider{
  width:94%;
  margin-left:15rpx;
  margin-right:15rpx;
  margin-top:0rpx;
  margin-bottom:0rpx;
}


.myAudio .time{
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
  height:30rpx;
  color:#dfdbdd;
  box-sizing: border-box;
  background:#fff;
}
.myAudio .audioTitle{
  box-sizing: border-box;
}
.myAudioMy .time {
  display:flex;
  justify-content:space-between;
  font-size:24rpx;
  height:30rpx;
  color:#dfdbdd;
  padding-right:20rpx;
  box-sizing:border-box;
  background:#fff;
  padding-left:12rpx;
}
.me_contips{
  max-width:80rpx;
  height:80rpx;
}
.ellipsis{
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}



